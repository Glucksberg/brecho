{
    "name": "Produto",
    "type": "object",
    "properties": {
      "nome": {
        "type": "string",
        "description": "Nome do produto"
      },
      "categoria": {
        "type": "string",
        "enum": [
          "roupas_femininas",
          "roupas_masculinas",
          "calcados",
          "acessorios",
          "bolsas",
          "infantil"
        ],
        "description": "Categoria do produto"
      },
      "tamanho": {
        "type": "string",
        "description": "Tamanho do produto"
      },
      "cor": {
        "type": "string",
        "description": "Cor principal do produto"
      },
      "marca": {
        "type": "string",
        "description": "Marca do produto"
      },
      "preco_compra": {
        "type": "number",
        "description": "Preço de compra/consignação"
      },
      "preco_venda": {
        "type": "number",
        "description": "Preço de venda"
      },
      "condicao": {
        "type": "string",
        "enum": [
          "excelente",
          "muito_bom",
          "bom",
          "regular"
        ],
        "description": "Condição do produto"
      },
      "status": {
        "type": "string",
        "enum": [
          "disponivel",
          "vendido",
          "reservado"
        ],
        "default": "disponivel",
        "description": "Status do produto"
      },
      "disponivel": {
        "type": "boolean",
        "default": true,
        "description": "Se o produto está disponível para venda na loja online"
      },
      "descricao": {
        "type": "string",
        "description": "Descrição detalhada do produto"
      },
      "foto_url": {
        "type": "string",
        "description": "URL da foto do produto"
      },
      "codigo": {
        "type": "string",
        "description": "Código único do produto"
      }
    },
    "required": [
      "nome",
      "categoria",
      "preco_venda"
    ],
    "rls": {
      "write": {
        "created_by": "{{user.email}}"
      }
    }
  }