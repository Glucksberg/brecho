# ============================================
# DATABASE
# ============================================

# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/retrocarolis?schema=public"

# MySQL alternative:
# DATABASE_URL="mysql://user:password@localhost:3306/retrocarolis"


# ============================================
# NEXTAUTH (Authentication)
# ============================================

# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-change-this-in-production"

# URL da aplicação
NEXTAUTH_URL="http://localhost:3000"

# Production example:
# NEXTAUTH_URL="https://retrocarolis.com.br"


# ============================================
# MERCADO PAGO (Payment Gateway)
# ============================================

# Modo: "sandbox" para testes ou "production" para produção
MERCADOPAGO_MODE="sandbox"

# Access Token (Backend)
# Sandbox: Obtido em https://www.mercadopago.com.br/developers/panel/app
# Tab: "Credenciais de teste" -> Access Token
MERCADOPAGO_ACCESS_TOKEN="TEST-1234567890-XXXXXX-XXXXXXXXXXXXXXXXXXXXXXXX-123456789"

# Public Key (Frontend)
# Sandbox: Obtido em https://www.mercadopago.com.br/developers/panel/app
# Tab: "Credenciais de teste" -> Public Key
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY="TEST-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Production credentials (uncomment when going live):
# MERCADOPAGO_ACCESS_TOKEN="APP_USR-1234567890-XXXXXX-XXXXXXXXXXXXXXXXXXXXXXXX-123456789"
# NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY="APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Webhook Secret (IMPORTANTE para segurança!)
# Obtido em: https://www.mercadopago.com.br/developers/panel/app -> Webhooks
# Este secret é usado para validar que webhooks realmente vieram do Mercado Pago
MERCADOPAGO_WEBHOOK_SECRET="your-webhook-secret-here"


# ============================================
# EMAIL (Optional - for password reset)
# ============================================

# SMTP Configuration
# EMAIL_FROM="noreply@retrocarolis.com.br"
# EMAIL_SERVER="smtp.gmail.com"
# EMAIL_PORT="587"
# EMAIL_USER="your-email@gmail.com"
# EMAIL_PASSWORD="your-app-password"

# Or use a service like SendGrid, AWS SES, Resend, etc.
# SENDGRID_API_KEY="SG.xxxxxxxxxxxxxxxxxxxxx"
# RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxx"


# ============================================
# STORAGE (Optional - for file uploads)
# ============================================

# AWS S3
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_BUCKET_NAME="retrocarolis-images"

# Or use Cloudinary:
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"


# ============================================
# ANALYTICS (Optional)
# ============================================

# Google Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Meta Pixel
# NEXT_PUBLIC_META_PIXEL_ID="123456789012345"


# ============================================
# DEPLOYMENT
# ============================================

# Vercel (auto-detected)
# VERCEL_URL is automatically set by Vercel

# Production domain
# NEXT_PUBLIC_DOMAIN="retrocarolis.com.br"


# ============================================
# DEVELOPMENT
# ============================================

# Show debug logs
# DEBUG="true"

# Skip database migration on build
# SKIP_DB_MIGRATE="false"
